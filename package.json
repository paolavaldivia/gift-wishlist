{
  "name": "gift-list",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "pnpm run build && wrangler pages dev",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run",
    "db:dev:push": "drizzle-kit push --config drizzle-dev.config.ts",
    "db:dev:seed": "tsx src/lib/server/db/seed.ts",
    "db:push": "drizzle-kit push --config drizzle-prod.config.ts",
    "db:gen": "drizzle-kit generate --config drizzle-prod.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle-prod.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle-prod.config.ts",
    "deploy": "pnpm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types src/worker-configuration.d.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-cloudflare": "^7.0.3",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vitest": "^3.0.0",
    "wrangler": "^4.19.1"
  },
  "dependencies": {
    "@inlang/paraglide-js": "^2.0.0",
    "@libsql/client": "^0.14.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "drizzle-orm": "^0.40.0",
    "drizzle-seed": "^0.3.1",
    "jsonwebtoken": "^9.0.2"
  }
}